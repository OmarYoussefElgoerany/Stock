@model ItemDto
@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<form asp-controller="Item" asp-action="Edit" method="post">
    <div class="mb-3 mt-3">
      <label class="fw-bold" asp-for="Name"></label>
      <input asp-for="Name" class="form-control" value="@Model.Name" placeholder="Enter Item Name">
      <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="mb-3">
      <label asp-for="Price"></label>
      <input asp-for="Price" type="number" class="form-control" value="@Model.Price" placeholder="Enter Price">
      <span asp-validation-for="Price" class="text-danger"></span>
    </div>
       <div class="mb-3">
      <label asp-for="Quantity"></label>
      <input asp-for="Quantity" class="form-control" value="@Model.Quantity" placeholder="Enter Quantity">
      <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>
      <div>
      <input hidden asp-for="StoreId"  value="@ViewBag.StoreId" class="form-control">
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-controller="Item" asp-action="Details" class="btn btn-primary"  asp-route-id="@ViewBag.StoreId">Back</a>
  </form>

@section Scripts{
                <partial name="_ValidationScriptsPartial" />
}