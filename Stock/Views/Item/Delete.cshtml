@model ItemDto
@{
    ViewData["Title"] = "Delete";
}

<h2>Delete item</h2>


<h3>Are you sure you want to delete this?</h3>

<form asp-action="Delete">      
    <div>
        <input hidden  asp-for="Id" value="@Model.Id" />
      <div class="mb-3 mt-3">
      <label class="fw-bold" asp-for="Name"></label>
      <input readonly asp-for="Name" class="form-control" value="@Model.Name" placeholder="Enter Item Name">
    </div>
    <div class="mb-3">
      <label asp-for="Price"></label>
      <input readonly asp-for="Price" type="number" class="form-control" value="@Model.Price" placeholder="Enter Price">
    </div>
       <div class="mb-3">
      <label asp-for="Quantity"></label>
      <input readonly asp-for="Quantity" class="form-control" value="@Model.Quantity" placeholder="Enter Quantity">
    </div>
     <div>
      <input hidden asp-for="StoreId"  value="@ViewBag.StoreId" class="form-control">
    </div>
            <input type="submit" value="Delete" class="btn btn-danger" /> |
    <a asp-controller="Item" asp-action="Details" class="btn btn-danger"  asp-route-id="@ViewBag.StoreId">Back</a>
        </div>
    </form>
</div>
